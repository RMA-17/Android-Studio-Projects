<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10.4dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:id="@+id/kategoryNote"
                android:text="Kategori Notes"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="8pt"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10.4dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="4pt"
                android:layout_width="match_parent"
                android:id="@+id/totalNotes"
                android:text="Total Data"
                android:gravity="right"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="8pt"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:textSize="10pt"
            android:visibility="visible"
            android:gravity="center"
            android:id="@+id/notesNotfound"
            android:text="Note tidak ditemukan"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:id="@+id/rv_listnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>